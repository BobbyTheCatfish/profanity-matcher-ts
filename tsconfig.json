{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node10",
        "declaration": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "target": "ES2016",
        "noImplicitAny": true,
        "sourceMap": true,
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}